generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String 
  username  String   @unique
  email     String   @unique
  password  String 
  createdAt DateTime @default(now())
}

model Linha {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  code        String
  origin      String
  destination String
  route       String[]
}